<h2 class="titulo">Alteração de nota de texto</h2>
<form method="post" action="/nota/altera/{{id}}" class="row">
    <div class="col-md-6 col-lg-2">
        <label for="id" class="form-label">ID</label>
        <input type="text" name="id" value="{{id}}" size="30" class="form-control" readonly />
    </div>
    <div class="col-md-6 col-lg-2">
        <label for="titulo" class="form-label">Título</label>
        <input type="text" name="titulo" value="{{titulo}}" size="60" class="form-control"/>
    </div>
    <div class="col-sm-12">
        <label for="texto" class="form-label">Texto da Nota</label>
        <textarea rows="5" cols="57" name="texto" class="form-control">{{texto}}</textarea>
    </div>
    <div class="col-sm-12">
        <div class="form-check">
            {{#if lida}}
                <input type="checkbox" name="status" id="status" class="form-check-input" checked>
            {{else}}
                <input type="checkbox" name="status" id="status" class="form-check-input">
            {{/if}}
                <label for="status" class="form-check-label">Nota Lida</label>
        </div>
    </div>
    <div class="col-sm-12">
        <button type="submit" class="btn btn-sucess">Alterar</button>
        <a href="/nota/consulta/{{id}}"><button type="button" class="btn btn-secondary">Cancelar</button></a>
    </div>
</form>