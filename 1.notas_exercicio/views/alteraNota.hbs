<h2>Alteração de nota de texto</h2>
<form method='POST' action='/nota/altera/{{chave}}'>

    {{!-- Campo CHAVE (somente leitura) --}}
    <div class="mb-3">
        <label for="chave" class="form-label">Chave</label>
        <input type='text' name='chave' value="{{chave}}" class="form-control" readonly>
    </div>

    {{!-- Campo TÍTULO --}}
    <div class="mb-3">
        <label for="titulo" class="form-label">Título</label>
        <input type="text" name='titulo' value="{{titulo}}" class="form-control">
    </div>

    {{!-- Campo TEXTO DA NOTA (Textarea) --}}
    <div class="mb-3">
        <label for="texto" class="form-label">Texto da Nota</label>
        <textarea rows="5" name='texto' class="form-control">{{texto}}</textarea>
    </div>

    {{!-- Campo CHECKBOX (Status Lida) --}}
    <div class="mb-3 form-check">
        <input type="checkbox" name='status' class="form-check-input" id="checkLida" {{#if estaLida}}checked{{/if}}>
        <label class="form-check-label" for="checkLida">Nota Lida</label>
    </div>

    <div class="d-flex justify-content-start gap-2 mt-4">
        {{!-- Botão ALTERAR (Cor Verde de sucesso) --}}
        <button type="submit" class="btn btn-success">Alterar</button>

        {{!-- Botão CANCELAR (ou Voltar) --}}
        <a href="/nota/consulta/{{chave}}" class="btn btn-secondary">Cancelar</a>
    </div>
</form>